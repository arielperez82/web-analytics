{
  "name": "web-analytics",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "check:tinybird": "cd tinybird && tb --cloud deployment create --check",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "lint:md": "markdownlint .",
    "lint:md:fix": "markdownlint --fix .",
    "lint:format": "prettier --check",
    "lint:format:fix": "prettier --write",
    "lint:format:src": "prettier --check '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:src:fix": "prettier --write '{src,scripts}/**/*.{js,jsx,ts,tsx,astro}'",
    "lint:format:css": "prettier --check 'src/**/*.{css,astro}'",
    "lint:format:css:fix": "prettier --write 'src/**/*.{css,astro}'",
    "lint:code": "eslint",
    "lint:code:fix": "eslint --fix",
    "lint:code:src": "eslint src scripts",
    "lint:code:src:fix": "eslint --fix src scripts",
    "lint:styles": "stylelint 'src/**/*.{css,astro}'",
    "lint:styles:fix": "stylelint 'src/**/*.{css,astro}' --fix",
    "test:tinybird": "cd tinybird && tb test run",
    "build:tinybird": "cd tinybird && tb build"
  },
  "dependencies": {
   "dotenv-cli": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "24.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsx": "4.20.3"
  }
}
